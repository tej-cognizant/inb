<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ZigWheels Test Suite" parallel="false" verbose="1">
    
    <test name="All Tests" preserve-order="true">
        <classes>
            <class name="com.cts.inb.tests.HomePageTest"/>
            <class name="com.cts.inb.tests.YamahaBikesTest"/>
            <class name="com.cts.inb.tests.UpcomingBikesTest"/>
            <class name="com.cts.inb.tests.UsedCarsTest"/>
            <class name="com.cts.inb.tests.LoginTest"/>
        </classes>
